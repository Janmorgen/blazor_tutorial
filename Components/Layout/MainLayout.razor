@inherits LayoutComponentBase
@*@rendermode InteractiveServer*@
@using BlazorApp.Components.Widgets
<div 
  class="page" 
  >

  @*style="cursor: none;" *@
    @*<div class="sidebar">*@
        <NavMenu />
    @*</div>*@

    <main>
      <div class="top-row px-4" @onclick="Mouse_Move">
        <DisplayInfo />
        <button  @onclick="@Mouse_Move">@Coordinates </button>
        <CurrentTime />
      </div>


        <article class="content px-4">
            @Body
        </article>

    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code{

private string Coordinates {get; set;} = "No Value";

private async Task Mouse_Move(MouseEventArgs e){
  await Task.Delay(1000);
  Console.WriteLine("Hello");
  Coordinates = $"X = {e.ClientX} Y={e.ClientY}";
}



}

